<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginTop="-4dp"
            android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:background="#F44336">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/headline1"
                  android:text="Delete This Card"
                  android:textColor="#fff"
                  android:textStyle="italic"
                  android:layout_marginBottom="8dp"
                  android:fontFamily="sans-serif-condensed"
                  android:textSize="24dp"/>
        <ImageView android:layout_width="84dp"
                   android:layout_height="84dp"
                   android:id="@+id/icon1"
                   android:layout_marginRight="8dp"
                   android:layout_below="@id/headline1"
                   android:src="@drawable/ic_delete_white"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minHeight="80dp"
                  android:gravity="center_vertical"
                  android:layout_below="@id/headline1"
                  android:layout_toRightOf="@id/icon1"
                  android:text="You can now delete this card.\nIf you need to access it again,\nyou can add it from settings."
                  android:textColor="#fff"
                  android:fontFamily="sans-serif"
                  android:textSize="16dp"/>
    </RelativeLayout>
